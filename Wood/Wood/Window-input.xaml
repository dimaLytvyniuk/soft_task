        <Button x:Name="button" Content="Начать работу" HorizontalAlignment="Left" Margin="80,202,0,0" VerticalAlignment="Top" Width="240" Height="43" Background="#FFEEDD82" FontFamily="Segoe UI Semilight" FontSize="16" Click="button_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="27" Margin="110,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" BorderThickness="3" BorderBrush="#FFEEDD82" FontSize="17" FontFamily="Yu Gothic Medium" TextAlignment="Right" PreviewTextInput="textBox_PreviewTextInput" MaxLength="4" MaxLines="1"/>
        <Label x:Name="label" Content="Введите количество колод" HorizontalAlignment="Left" Height="32" Margin="86,41,0,0" VerticalAlignment="Top" Width="226" FontSize="17" FontFamily="Segoe UI Semibold" Foreground="#FFEEDD82"/>

    </Grid>
