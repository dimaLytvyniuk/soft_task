        xmlns:local="clr-namespace:Wood"
        mc:Ignorable="d"
        Title="Бревна 2016" Height="300" Width="400" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Closing="Window_Closing" Icon="Resources/brevico.ico">
